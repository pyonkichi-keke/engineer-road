.body
  .flash
    = render 'layouts/flash'
  .header
    .header__new__group
      = link_to new_group_path, class: "header__new__group__icon" do
        = fa_icon 'graduation-cap'
    .header__logo
      Engineer road
      
    .header-right  
      - if user_signed_in?
        .header__signed
          .header__signed__left
            .header__signed__title
              Login user
            .header__signed__name
              = current_user.name
          .header__logout
            = link_to destroy_user_session_path, method: :delete, class: "header__logout__icon" do
              = fa_icon 'sign-out'
            Log out
      - else
        .header__signup
          .header__signup__link
            = link_to  new_user_registration_path do
              = fa_icon 'user-plus', class: "header__signup__link"
          .header__signup__name
            新規登録

        .header__signin
          .header__signin__link
            = link_to new_user_session_path do
              = fa_icon 'sign-in', class: "header__signin__link"
          .header__signin__name
            ログイン
        

  .main
    .main__list
      - @groups.each do |group|
        .main__list__block
          .main__list__block__name
            =link_to group_messages_path(group.id),class: "group" do
              = group.name
          .main__list__block__option
            .main__list__block__option--number
              投稿数: 
              = group.messages.count
            .main__list__block--option--latest
              最新更新日: 
              = group.created_at.to_s(:datetime)
          .main__list__block__new
            = link_to new_group_message_path(group.id), class: "new" do
              = fa_icon 'pencil', class: "pencil" 

    .main__link
      .google
        = link_to "https://www.google.com/?hl=ja" do
          = fa_icon 'google', class: "google-icon"
      .youtube
        = link_to "https://www.youtube.com/?gl=JP" do
          = fa_icon 'youtube', class: "youtube-icon"

