.body
  .new__header
    .new__header__return
      = link_to  group_messages_path(@group.id), class: "new__header__return" do
        = fa_icon 'undo'
    .new__header__logo
      = @group.name

  .main
    .new__main
      = form_with model:[@group, @message], html: {class: "new__main__form"},  local: true do |f|
        = f.text_field :title, placeholder: "Title", class: "new__main__form__title"
        = f.text_area :content, placeholder: "投稿内容を入力してください", class: "new__main__form__text"
        = f.label :image, class: "new__main__form__img" do
          = fa_icon "camera"
          = f.file_field :image, class: "hidden"
          = button_tag  type: "submit", class: "new__main__form__send" do
            = fa_icon "paper-plane"

    .main__link
      .google
        = link_to "https://www.google.com/?hl=ja" do
          = fa_icon 'google', class: "google-icon"
      .youtube
        = link_to "https://www.youtube.com/?gl=JP" do
          = fa_icon 'youtube', class: "youtube-icon"


    